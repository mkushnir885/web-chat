{
  "name": "web-chat",
  "version": "1.0.0",
  "description": "A simple, minimal-dependency web chat with authentication",
  "homepage": "https://github.com/mkushnir885/web-chat#readme",
  "license": "MIT",
  "authors": [
    "Mykola Kushnir <mkushnir885@gmail.com>",
    "Maksym Yatsenko <saddas1rambler@gmail.com>"
  ],
  "repository": "github:mkushnir885/web-chat",
  "type": "module",
  "scripts": {
    "http": "node lib/http/main.js",
    "ws": "node lib/ws/main.js",
    "dev:http": "node --watch lib/http/main.js",
    "dev:ws": "node --watch lib/ws/main.js",
    "jest":  "node --experimental-vm-modules node_modules/jest/bin/jest.js --passWithNoTests",
    "test:unit": "npm run jest ./test/unit",
    "test:integration": "npm run jest ./test/integration",
    "test:e2e": "npm run jest ./test/e2e",
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "lint": "eslint .",
    "fmt": "prettier --write ."
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "mysql2": "^3.10.0",
    "ws": "^8.17.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@jest/globals": "^29.7.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.7",
    "prettier": "^3.4.2"
  },
  "private": true
}
